<persistence
   xmlns              = "http://java.sun.com/xml/ns/persistence"
   xmlns:xsi          = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
   version            = "2.0">
   
   <persistence-unit name="ru.simsonic.test4ig.persistence">
      
      <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

      <exclude-unlisted-classes>false</exclude-unlisted-classes>

      <properties>
         <property name="javax.persistence.jdbc.driver"   value="org.mysql.Driver" />
         <property name="javax.persistence.jdbc.url"      value="jdbc:mysql://methuselah.ru:3306/test4ig" />
         <property name="javax.persistence.jdbc.user"     value="test4ig" />
         <property name="javax.persistence.jdbc.password" value="" />
      </properties>
   </persistence-unit>
</persistence>
